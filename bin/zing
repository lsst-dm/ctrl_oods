import asyncio
import datetime
import json
import logging
import os
import socket
import time

from confluent_kafka import Producer

broker="localhost"
port=29092

config = { 'bootstrap.servers': f'{broker}:{port}',
           'client.id': socket.gethostname(),
         }

print(f'{broker}:{port}')
producer = Producer(config)
dir = os.environ["CTRL_OODS_DIR"]

filepath = os.path.join(dir,"tests","data","kafka_msg.json")


f = open(filepath)
data = json.load(f)
f.close()

now = datetime.datetime.now()

curtime = now.strftime("%Y-%m-%d %H:%M:%S")

data["curtime"] = curtime

json_obj = json.dumps(data)


producer.produce(topic="test2",key=curtime,value=json_obj)
producer.flush()
